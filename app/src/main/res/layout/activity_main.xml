<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    >

    <fragment
        android:id="@+id/map_fragment"
        android:name="de.westnordost.streetcomplete.map.MainFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topPanel"
        android:layout_marginTop="-8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topPanel"
        android:orientation="vertical">
        <!-- the toolbar somehow always wants to be in front in its layout, so let's ban it into
             a sub frame layout -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/Theme.Bubble.ToolbarPopup">

            <RelativeLayout
                android:id="@+id/uploadedAnswersContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="0dp"
                android:paddingEnd="12dp"
                android:clipChildren="false"
                android:minWidth="84dp"
                android:gravity="center_vertical"
                android:clickable="true">

                <ProgressBar
                    android:id="@+id/uploadedAnswersProgress"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:indeterminate="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/uploadedAnswersIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_star_white_24dp"/>

                <TextView
                    android:id="@+id/uploadedAnswersCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/uploadedAnswersIcon"
                    tools:text="8888"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/unsyncedAnswersContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/actionBarItemBackground"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="12dp"
                android:clipChildren="false"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/unsyncedAnswersProgress"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:indeterminate="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/unsyncedAnswersIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_file_upload_24dp"/>

                <TextView
                    android:id="@+id/unsyncedAnswersCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/notification_background"
                    android:gravity="center"
                    android:textColor="@color/button_white"
                    android:textSize="10dp"
                    android:layout_alignTop="@id/unsyncedAnswersIcon"
                    android:layout_alignEnd="@id/unsyncedAnswersIcon"
                    tools:ignore="SpUsage"
                    tools:text="88"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notificationsContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/actionBarItemBackground"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="12dp"
                android:clipChildren="false"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/notificationsIconImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_notifications_white_24dp"/>

                <TextView
                    android:id="@+id/notificationsCounterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/notification_background"
                    android:gravity="center"
                    android:textColor="@color/button_white"
                    android:textSize="10dp"
                    android:layout_alignTop="@id/notificationsIconImageView"
                    android:layout_alignEnd="@id/notificationsIconImageView"
                    tools:ignore="SpUsage"
                    tools:text="8" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <ProgressBar
            android:id="@+id/download_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MapProgressBar.Horizontal"
            android:visibility="visible"
            android:progress="50"
            android:max = "100"
            android:indeterminate="false"/>

    </LinearLayout>

    <fragment
        android:id="@+id/achievement_info_fragment"
        android:name="de.westnordost.streetcomplete.user.AchievementInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"/>

    <ImageButton
        android:id="@+id/mainMenuButton"
        android:layout_width="@dimen/map_button_size"
        android:layout_height="@dimen/map_button_size"
        android:scaleType="center"
        style="@style/RoundWhiteButton"
        android:src="@drawable/ic_menu_black_24dp"
        android:contentDescription="@string/map_btn_menu"
        android:layout_alignParentRight="true"/>

    <ImageButton
        android:id="@+id/undoButton"
        android:layout_width="@dimen/map_button_size"
        android:layout_height="@dimen/map_button_size"
        android:scaleType="center"
        style="@style/RoundWhiteButton"
        android:src="@drawable/ic_undo_black_24dp"
        android:contentDescription="@string/action_undo"
        android:layout_toLeftOf="@id/mainMenuButton"/>

    <ImageButton
        android:id="@+id/downloadButton"
        android:layout_width="@dimen/map_button_size"
        android:layout_height="@dimen/map_button_size"
        android:scaleType="center"
        style="@style/RoundWhiteButton"
        android:src="@drawable/ic_file_download_black_24dp"
        android:contentDescription="@string/action_download"
        android:layout_toLeftOf="@id/undoButton"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

 </RelativeLayout >
