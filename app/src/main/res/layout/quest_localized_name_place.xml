<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quest_address_street_place_name_label"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_placename"
        android:layout_marginTop="12dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/namesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/quest_localized_name_place_row"
            tools:itemCount="3"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_town_silhouette"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:layout_below="@id/namesList"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/addLanguageButton"
        android:src="@drawable/ic_add_24dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"/>

</LinearLayout>
