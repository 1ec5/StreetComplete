<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_rectangular_sign_yellow"
        android:padding="16dp"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="112dp"
        android:id="@+id/meterInputSign">

        <EditText
            android:id="@+id/meterInput"
            android:layout_width="82dp"
            android:layout_height="48dp"
            android:background="#0fff"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textSize="38dp"
            android:textStyle="bold"
            tools:text="1.40" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/meterInput"
            android:layout_toEndOf="@+id/meterInput"
            android:gravity="center"
            android:text="m"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/meterInput"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/maxheight_canada_arrow"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <include
        android:id="@+id/feetInputSign"
        tools:visibility="gone"
        layout="@layout/quest_maxheight_feet"/>

    <Spinner
        android:id="@+id/heightUnitSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:background="#0fff"
        android:visibility="visible" />

</RelativeLayout>
